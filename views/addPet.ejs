<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Pet</title>
</head>
<body>
    <a href="/">Return Home</a>
    <form action="/pets/create" method="POST" enctype="multipart/form-data">
        <input type="text" name="name" placeholder="Name of Pet" required>
        <input type="text" name="age" placeholder="Age of Pet" required>
        <input type="text" name="breed" placeholder="Breed of Pet" required>
        <textarea name="description" placeholder="Description of Pet" required></textarea>
        <textarea name="behavior" placeholder="Behavior of Pet" required></textarea>

        <!-- Category Dropdown -->
        <label for="category">Category:</label>
        <select name="category" id="category" required>
            <option value="" disabled selected>Pick a Category</option> <!-- This is a placeholder option -->
            <option value="dog">Dog</option>
            <option value="cat">Cat</option>
            <option value="bird">Bird</option>
            <option value="reptile">Reptile</option>
            <option value="other">Other</option>
        </select>

        <input type="text" name="history" placeholder="History of Pet" required>
        <input type="text" name="city" placeholder="City of Pet" required>

        <!-- Gender Dropdown -->
        <label for="gender">Gender:</label>
        <select name="gender" id="gender" required>
            <option value="" disabled selected>Pick a Gender</option> <!-- This is a placeholder option -->
            <option value="male">Male</option>
            <option value="female">Female</option>
        </select>

        <input type="file" name="image" accept="image/*">
        <button type="submit">Submit</button>
    </form>
</body>
</html>