<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/ionicons@5.5.2/dist/css/ionicons.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
    <title>Homepage</title>
</head>
<body>
    <h1 class="title">Match</h1>
    <a href="adminPets">Admin Page</a>
    <a href="/addPet">Add Pet</a>

    <!-- Filter Buttons -->
    <div class="filter-buttons">
        <button onclick="filterPets('all')">All</button>
        <button onclick="filterPets('dog')">Dogs</button>
        <button onclick="filterPets('cat')">Cats</button>
        <button onclick="filterPets('bird')">Birds</button>
        <button onclick="filterPets('reptile')">Reptiles</button>
        <button onclick="filterPets('other')">Others</button>
    </div>

    <ul id="pets-list">
        <% pets.forEach(function(pet) { %>
            <li class="pet-item" data-category="<%= pet.category %>">
                <div class="shadow"></div>
                    <div class="img-hover-zoom img-hover-zoom--xyz">
                        <a href="/petProfile/<%= pet._id %>">
                            <img src="<%= pet.imageURL %>" alt="<%= pet.name %>">
                        </a>
                        <div class="container">
                            <h2 class="name"><%= pet.name %></h2>
                            <p class="dot"><ion-icon name="ellipse"></ion-icon></p>
                            <p class="age"><%= pet.age %></p>
                        </div>
                        <% if (pet.gender === 'male') { %>
                            <ion-icon class="male" name="male"></ion-icon>
                        <% } else if (pet.gender === 'female') { %>
                            <ion-icon class="female" name="female"></ion-icon>
                        <% } %>
                        <!-- Favorite Button -->
                        <form action="/pets/favorite/<%= pet._id %>" method="POST" style="display: inline;">
                            <button class="favorite-btn" data-pet-id="<%= pet._id %>">
                                <% if (favorites && favorites.includes(pet._id.toString())) { %>
                                    <i class="fa-solid fa-heart"></i>
                                <% } else { %>
                                    <i class="fa-regular fa-heart"></i>
                                <% } %>
                            </button>
                        </form>
                    </div>
                </div>
            </li>
        <% }); %>
    </ul>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script>
        // JavaScript to filter pets by category on the same page
        function filterPets(category) {
            const pets = document.querySelectorAll('.pet-item');
            pets.forEach(pet => {
                if (category === 'all' || pet.getAttribute('data-category') === category) {
                    pet.style.display = 'block'; // Show the pet if it matches the category
                } else {
                    pet.style.display = 'none'; // Hide the pet if it doesn't match
                }
            });
        }
    </script>
</body>
</html>